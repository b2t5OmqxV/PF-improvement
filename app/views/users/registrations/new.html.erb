<div class='container'>
  <div class='row'>
    <div class='col-10 offset-1'>
      <h2 class='my-4 border-bottom border-secondry'>新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="col-3 mt-2 field">
        <%= f.label :ユーザーネーム %><br />
        <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
      </div>

      <div class="col-3 mt-2 field">
        <%= f.label :メールアドレス%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="col-3 mt-2 field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="col-3 mt-2 field">
        <%= f.label :パスワード再入力 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="col-3 mt-3 select">
        <%= f.label :性別 %>
        <%= f.select :gender, ['無回答', '男性', '女性'] %>
      </div>

      <div class="col-3 my-3 actions">
        <%= f.submit "この内容で登録", class:'btn btn-success btn-block' %>
      </div>
    <% end %>

    <%= link_to '戻る', :back, class:'m-3 btn btn-outline-primary' %>
    </div>
  </div>
</div>
